<%= form_for(book) do |f| %>
<% if book.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(book.errors.count, "error") %>
        prohibited this book from being saved:</h2>

    <ul>
        <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="field">
    <%= f.label :user_id %>
    <%= f.select :user_id, User.all.collect { |user| [ user.name, user.id ] } %>
</div>

<div class="field">
    <%= f.label :category_id %>
    <%= f.select :category_id, Category.all.collect { |category| [ category.category, category.id ] } %>
</div>

<div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
</div>

<div class="field">
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
</div>

<div class="actions">
    <%= f.submit %>
</div>
<% end %>
