<p id="notice"><%= notice %></p>

<h1>Books</h1>
<%= link_to 'Create New Book', new_book_path %>
<table>
    <thead>
        <tr>
            <th>User</th>
            <th>Category</th>
            <th>Description</th>

            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
        <tr class="booksIndex">
            <td>
                <h4>
                    <%= book.user.name %></h4>
                <%= image_tag(book.image_url, class: "small_profile_icon") %></td>
            <td><%= book.category.category %></td>
            <td><%= book.description %>
                <%= link_to 'Show', book %>
                <%= link_to 'Edit', edit_book_path(book) %>
                <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <tr></tr>
        <% end %>
    </tbody>
</table>

<br>
